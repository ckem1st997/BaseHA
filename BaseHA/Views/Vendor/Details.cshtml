@using BaseHA.Application.ModelDto;
@model VendorCommands
@{
    Layout = null;
}



@if (ViewBag.result != null)
{
    <p>@ViewBag.result</p>
}
<div class="form fixed-layout-form">
    <form class="form-horizontal">
        <div class="form-body">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                <h4 class="modal-title">Chi tiết</h4>
            </div>
            <div class="modal-body">
                @Html.AntiForgeryToken()
                @Html.HiddenFor(m => m.Id)


                <div class="form-group form-group-sm">
                    <label class="control-label  col-md-4" for="UnitName">Tên người bán</label>
                    <div class="col-md-8">
                        @Html.DisplayFor(m => m.Name, new { @class = "form-control" })

                    </div>
                </div>

                <div class="form-group form-group-sm">
                    <label class="control-label  col-md-4" for="UnitName">Mã người bán</label>
                    <div class="col-md-8">
                        @Html.DisplayFor(m => m.Code, new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group form-group-sm">
                    <label class="control-label  col-md-4" for="UnitName">Địa chỉ</label>
                    <div class="col-md-8">
                        @Html.TextBoxFor(m => m.Address, new { @class = "form-control" })
                    </div>

                    <div class="form-group form-group-sm">
                        <label class="control-label  col-md-4" for="UnitName">SDT</label>
                        <div class="col-md-8">
                            @Html.TextBoxFor(m => m.Phone, new { @class = "form-control" })
                        </div>

                        <div class="form-group form-group-sm">
                            <label class="control-label  col-md-4" for="UnitName">Email</label>
                            <div class="col-md-8">
                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                            </div>

                            <div class="form-group form-group-sm">
                                <label class="control-label  col-md-4" for="UnitName">ContactPerson</label>
                                <div class="col-md-8">
                                    @Html.TextBoxFor(m => m.ContactPerson, new { @class = "form-control" })
                                </div>

                <div class="form-group form-group-sm">
                    <label class="control-label  col-md-4" for="UnitName">Trạng thái</label>
                    <div class="col-md-8">
                        @Html.DisplayFor(m => m.Inactive)
                    </div>
                </div>
            </div>
            <div class="modal-footer form-actions">
                <button type="button" class="btn btn-default btn-sm" data-dismiss="modal">
                    <i class="fa fa-times"></i> Đóng
                </button>
            </div>
        </div>
    </form>
</div>


