@using BaseHA.Application.ModelDto;
@model CategoryCommands
@{
    Layout = null;
}

<div class="form fixed-layout-form">
    <form data-form-type="ajax" id="editForm1" class="form-horizontal">
        <div class="form-body">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                <h4 class="modal-title">Thêm mới</h4>
            </div>
            <div class="modal-body">
                @Html.AntiForgeryToken()
                @Html.HiddenFor(m => m.Id)

                <div class="form-group form-group-sm">
                    <label class="control-label  col-md-4" for="UnitName">Tên danh mục</label>
                    <div class="col-md-8">
                        @Html.TextBoxFor(m => m.NameCategory, new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group form-group-sm">
                    <label class="control-label  col-md-4" for="UnitName">Mã tiếng Anh</label>
                    <div class="col-md-8">
                        @Html.TextBoxFor(m => m.IntentCodeEn, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label class="control-label  col-md-4" for="UnitName">Mã tiếng Việt</label>
                    <div class="col-md-8">
                        @Html.TextBoxFor(m => m.IntentCodeVn, new { @class = "form-control" })
                    </div>
                </div>           
                
                <div class="form-group form-group-sm">
                    <label class="control-label  col-md-4" for="UnitName">Mô tả</label>
                    <div class="col-md-8">
                        @Html.TextBoxFor(m => m.Description, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    @Html.LabelFor(m => m.ParentId, new { @class = "control-label col-md-4" })
                    <div class="col-md-8">
                        @Html.DropDownListFor(m => m.ParentId, Model.AvailableCaegorys, "Chọn ...", new { @class = "form-control", style = "width: 100%" })
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label class="control-label  col-md-4" for="UnitName">Trạng thái</label>
                    <div class="col-md-8">
                        @Html.EditorFor(m => m.Inactive)
                    </div>
                </div>
            </div>
            <div class="modal-footer form-actions">
                <button type="submit" class="btn blue btn-sm">
                    <i class="fa fa-spinner fa-spin spin-submit"></i>
                    <i class="fa fa-check"></i> Lưu lại
                </button>
                <button type="submit" class="btn blue btn-sm" data-action="continueAdding">
                    <i class="fa fa-spinner fa-spin spin-submit"></i>
                    <i class="fa fa-plus"></i> Tiếp tục thêm
                </button>
                <button type="button" class="btn btn-default btn-sm" data-dismiss="modal">
                    <i class="fa fa-times"></i> Đóng
                </button>
            </div>
        </div>
    </form>
</div>


