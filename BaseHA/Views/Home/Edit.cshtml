@using BaseHA.Application.ModelDto;
@model CategoryTbCommands
@{
    Layout = null;
}


@if (ViewBag.result != null)
{
    <p>@ViewBag.result</p>
}
<div class="form fixed-layout-form">
    <form id="editForm1" data-form-type="ajax" class="form-horizontal">
        <div class="form-body">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                <h4 class="modal-title">Chỉnh sửa</h4>
            </div>
            <div class="modal-body">
                @Html.AntiForgeryToken()
                @Html.HiddenFor(m => m.Id)


                <div class="form-group form-group-sm">
                    <label class="control-label  col-md-4" for="UnitName">Category</label>
                    <div class="col-md-8">
                        @Html.TextBoxFor(m => m.Category, new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group form-group-sm">
                    <label class="control-label  col-md-4" for="UnitName">Intent_Code_EN</label>
                    <div class="col-md-8">
                        @Html.TextBoxFor(m => m.IntentCodeEn, new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group form-group-sm">
                    <label class="control-label  col-md-4" for="UnitName">Intent_Code_VN</label>
                    <div class="col-md-8">
                        @Html.TextBoxFor(m => m.IntentCodeVn, new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group form-group-sm">
                    <label class="control-label  col-md-4" for="UnitName">Description</label>
                    <div class="col-md-8">
                        @Html.TextBoxFor(m => m.Description, new { @class = "form-control" })
                    </div>
                </div>
            </div>

            <div class="modal-footer form-actions">
                <button type="submit" class="btn blue btn-sm">
                    <i class="fa fa-spinner fa-spin spin-submit"></i>
                    <i class="fa fa-check"></i> Lưu lại
                </button>
                <button type="submit" class="btn blue btn-sm" data-action="continueAdding">
                    <i class="fa fa-spinner fa-spin spin-submit"></i>
                    <i class="fa fa-plus"></i> Tiếp tục thêm
                </button>
                <button type="button" class="btn btn-default btn-sm" data-dismiss="modal">
                    <i class="fa fa-times"></i> Đóng
                </button>
            </div>
        </div>
    </form>
</div>

 