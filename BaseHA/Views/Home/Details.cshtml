@using BaseHA.Domain.Entity;
@model Unit
@{
    Layout = null;
}



@if (ViewBag.result != null)
{
    <p>@ViewBag.result</p>
}
<div class="form fixed-layout-form">
    <form class="form-horizontal">
        <div class="form-body">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                <h4 class="modal-title">Chi tiết</h4>
            </div>
            <div class="modal-body">
                @Html.AntiForgeryToken()
                @Html.HiddenFor(m => m.Id)


                <div class="form-group form-group-sm">
                    <label class="control-label  col-md-4" for="UnitName">Tên vật tư</label>
                    <div class="col-md-8">
                        @Html.DisplayFor(m => m.UnitName, new { @class = "form-control" })

                    </div>
                </div>

                <div class="form-group form-group-sm">
                    <label class="control-label  col-md-4" for="UnitName">Mã vật tư</label>
                    <div class="col-md-8">
                        @Html.DisplayFor(m => m.Code, new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group form-group-sm">
                    <label class="control-label  col-md-4" for="UnitName">Số lượng</label>
                    <div class="col-md-8">
                        @Html.DisplayFor(m => m.Number, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label class="control-label  col-md-4" for="UnitName">Trạng thái</label>
                    <div class="col-md-8">
                        @Html.DisplayFor(m => m.Inactive)
                    </div>
                </div>
            </div>
            <div class="modal-footer form-actions">
                <button type="button" class="btn btn-default btn-sm" data-dismiss="modal">
                    <i class="fa fa-times"></i> Đóng
                </button>
            </div>
        </div>
    </form>
</div>


